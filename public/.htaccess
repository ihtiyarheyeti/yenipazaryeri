# AGGRESIF CORS AYARLARI - APACHE
Header always set Access-Control-Allow-Origin "https://panel.woontegra.com"
Header always set Access-Control-Allow-Credentials "true"
Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, Accept, Origin, Cache-Control"

# OPTIONS preflight istekleri için
RewriteEngine On
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=204,L]

# Tüm istekleri index.php'ye yönlendir
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^ index.php [QSA,L]

# PHP ayarları
php_value max_execution_time 300
php_value memory_limit 512M

# Hata ayıklama
php_flag display_errors on
php_flag log_errors on
